<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.AddParticipantActivity"
    tools:showIn="@layout/activity_add_participant">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Vous êtes en train de créer un nouveau participant."
        android:id="@+id/infoInput"
        android:drawableLeft="@drawable/ic_menu_info"
        android:drawablePadding="5dp"
        android:layout_margin="15dp"
        android:paddingTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <LinearLayout
        android:id="@+id/nom_prenom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/infoInput"
        android:padding="5dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

        <EditText
            app:layout_constraintTop_toBottomOf="@+id/infoInput"
            android:id="@+id/txt_nom"
            android:layout_width="170dp"
            android:layout_height="53dp"
            android:hint="Nom"
            android:layout_marginRight="15dp"
            />

        <EditText
            app:layout_constraintTop_toBottomOf="@+id/infoInput"
            android:id="@+id/txt_prenom"
            android:layout_width="170dp"
            android:layout_height="53dp"
            android:hint="Prenom"
            />

    </LinearLayout>

    <EditText
        app:layout_constraintTop_toBottomOf="@+id/nom_prenom_layout"
        android:id="@+id/txt_echelon"
        android:inputType="number"
        android:layout_width="200dp"
        android:layout_height="53dp"
        android:hint="Echelon (entre 0 et 100)"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_echelon"
        android:padding="5dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

        <Button
            android:id="@+id/btn_annuler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:background="@drawable/button_background"
            android:padding="15dp"
            android:textColor="#fff"/>
        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajouter le participant"
            android:background="@drawable/button_blue_background"
            android:padding="15dp"
            android:textColor="#fff"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>