<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.AddCourseActivity"
    tools:showIn="@layout/activity_add_course">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Vous êtes en train de créer une nouvelle course. Vous devez choisir le type de course."
        android:id="@+id/infoInput"
        android:drawableLeft="@drawable/ic_menu_info"
        android:drawablePadding="5dp"
        android:layout_margin="15dp"
        android:paddingTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        app:layout_constraintTop_toBottomOf="@+id/infoInput"
        android:id="@+id/txt_titre"
        android:layout_width="300dp"
        android:layout_height="53dp"
        android:hint="Titre de la course"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date de la course : 24/12/1996"
        android:id="@+id/infoDate"
        app:layout_constraintTop_toBottomOf="@+id/txt_titre"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Spinner
        android:id="@+id/spinner_typeCourse"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/infoDate"
        android:layout_marginTop="8dp"
        android:prompt="@string/select_typecourse"
        android:animateLayoutChanges="true"
        android:spinnerMode="dropdown"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/spinner_typeCourse"
        android:padding="5dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

        <Button
            android:id="@+id/btn_annuler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:background="@drawable/button_background"
            android:padding="15dp"
            android:textColor="#fff"/>
        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajouter la course"
            android:background="@drawable/button_blue_background"
            android:padding="15dp"
            android:textColor="#fff"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>