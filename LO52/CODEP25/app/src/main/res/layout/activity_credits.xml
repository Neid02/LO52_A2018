<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:background="@color/black">

        <com.silentpangolin.codep25.Objects.MyScrollView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/credits_text_view"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@string/credits_name"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/size16"
                android:id="@+id/credits_text"/>

        </com.silentpangolin.codep25.Objects.MyScrollView>

        <LinearLayout
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/credits_end"
            android:gravity="center"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="@string/credits_end"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/size16"
                android:layout_marginBottom="@dimen/margin30"/>

            <ImageView
                android:layout_width="@dimen/image100" android:layout_height="@dimen/image100"
                android:src="@mipmap/ic_launcher" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/video_view"
            android:gravity="center"
            android:visibility="invisible">

            <VideoView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/video"/>

        </LinearLayout>


    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:background="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/navigation_item" />
</android.support.v4.widget.DrawerLayout>