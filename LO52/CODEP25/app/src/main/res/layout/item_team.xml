<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin6" android:layout_marginBottom="@dimen/margin6"
        android:gravity="center">

        <CheckBox
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/checked"
            android:buttonTint="@color/grey_black"/>

        <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/size16"
                android:paddingTop="@dimen/margin6" android:paddingStart="@dimen/margin6" android:paddingEnd="@dimen/margin6" android:paddingBottom="@dimen/margin3"
                android:id="@+id/nameTeam" />

            <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textColor="@color/grey_black"
                android:textSize="@dimen/size13"
                android:textStyle="italic"
                android:paddingBottom="@dimen/margin6" android:paddingStart="@dimen/margin6" android:paddingEnd="@dimen/margin6" android:paddingTop="@dimen/margin3"
                android:id="@+id/namesPlayer"/>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>